{
  "name": "@owlprotocol/ui-react",
  "version": "2.0.11",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist/*",
    "src/*",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "start": "vite --config vite-app.config.mts",
    "dev": "vite --config vite-app.config.mts",
    "build:app": "vite build --config vite-app.config.mts",
    "build": "cross-env NODE_OPTIONS='--max-old-space-size=4096' vite build",
    "build:watch": "cross-env NODE_OPTIONS='--max-old-space-size=4096' vite build --watch",
    "preview": "vite preview",
    "lint": "eslint 'src/**/*.ts' 'src/**/*.tsx'",
    "lint:fix": "eslint 'src/**/*.ts' 'src/**/*.tsx' --fix",
    "madge": "madge src/index.ts -c"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.0",
    "@chakra-ui/styled-system": "^2.9.2",
    "@chakra-ui/theme": "^3.2.0",
    "@choc-ui/chakra-autocomplete": "^5.2.7",
    "@clerk/clerk-react": "^4.24.2",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@fontsource-variable/inter": "^5.0.16",
    "@owlprotocol/contracts-api-client-trpc": "workspace:*",
    "@owlprotocol/contracts-api-firebase": "workspace:*",
    "@owlprotocol/crud-firebase": "workspace:*",
    "@owlprotocol/envvars": "workspace:^",
    "@tanstack/match-sorter-utils": "^8.8.4",
    "@tanstack/query-core": "^4.35.2",
    "@tanstack/react-form": "^0.3.6",
    "@tanstack/react-query": "^4.35.0",
    "@tanstack/react-router": "^1.15.3",
    "@tanstack/react-table": "^8.9.7",
    "@tanstack/react-virtual": "3.0.0-beta.59",
    "@tanstack/table-core": "^8.9.7",
    "@uidotdev/usehooks": "^2.4.0",
    "ethers": "5.7.2",
    "firebase": "^10.3.1",
    "framer-motion": "^10.16.4",
    "lodash-es": "4.17.21",
    "moment": "^2.29.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0",
    "react-icons": "^4.11.0",
    "react-qr-code": "^2.0.12",
    "reactfire": "^4.2.3",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@owlprotocol/eslint-config": "workspace:*",
    "@owlprotocol/prettier-config": "workspace:*",
    "@owlprotocol/vite-config": "workspace:*",
    "@types/lodash-es": "4.17.6",
    "@types/node": "^20.5.6",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "cross-env": "^7.0.3",
    "global": "^4.4.0",
    "madge": "^5.0.1",
    "typescript": "4.9.5",
    "vite": "^4.4.5",
    "vite-plugin-externalize-deps": "^0.7.0",
    "vitest": "^0.34.2"
  }
}
