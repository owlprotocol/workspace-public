{
  "name": "@owlprotocol/contracts-api-firebase",
  "version": "2.0.1",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/owlprotocol/contracts-api-firebase.git"
  },
  "homepage": "https://owlprotocol.github.io/contracts-api-firebase",
  "copyright": "Copyright 2023 Owl Protocol",
  "author": {
    "name": "Leo Vigna",
    "email": "leo.vigna@gmail.com",
    "url": "https://github.com/owlprotocol"
  },
  "license": "MIT",
  "type": "module",
  "main": "./lib/cjs/index.cjs",
  "module": "./lib/esm/index.mjs",
  "types": "./lib/types/index.d.ts",
  "exports": {
    "./models": {
      "types": "./lib/types/models/index.d.ts",
      "require": "./lib/cjs/models/index.js",
      "import": "./lib/esm/models/index.js"
    },
    "./admin": {
      "types": "./lib/types/admin/index.d.ts",
      "require": "./lib/cjs/admin/index.js",
      "import": "./lib/esm/admin/index.js"
    },
    "./web": {
      "types": "./lib/types/web/index.d.ts",
      "require": "./lib/cjs/web/index.js",
      "import": "./lib/esm/web/index.js"
    },
    "./test": {
      "types": "./lib/types/test/index.d.ts",
      "require": "./lib/cjs/test/index.js",
      "import": "./lib/esm/test/index.js"
    }
  },
  "files": [
    "dist/*",
    "lib/*",
    "src/*",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": "^18.0.0"
  },
  "scripts": {
    "test": "firebase emulators:exec --only firestore,storage,auth --project demo-owl-protocol 'pnpm run test:ci'",
    "test:watch": "vitest",
    "test:ci": "vitest --run",
    "build": "npm-run-all -p tsc esbuild",
    "build:watch": "npm-run-all -p tsc:watch esbuild:watch",
    "esbuild": "node esbuild.config.mjs",
    "esbuild:watch": "ESBUILD_WATCH=true node esbuild.config.mjs",
    "tsc": "tsc",
    "tsc:watch": "tsc -w",
    "clean": "rimraf lib dist",
    "madge": "madge src/index.ts -c",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "lint:staged": "lint-staged",
    "firebase-emulator": "firebase emulators:start --only firestore,storage,auth --project demo-owl-protocol"
  },
  "dependencies": {
    "@owlprotocol/envvars": "workspace:*",
    "@owlprotocol/zod-sol": "workspace:*",
    "zod": "3.21.4",
    "is-ipfs": "^8.0.1",
    "jsonpath": "^1.1.1"
  },
  "peerDependencies": {
    "firebase-admin": "^11.10.1",
    "firebase": "^10.3.1",
    "@trpc/server": "10.36"
  },
  "devDependencies": {
    "@owlprotocol/esbuild-config": "workspace:*",
    "@owlprotocol/eslint-config": "workspace:*",
    "@owlprotocol/prettier-config": "workspace:*",
    "@google-cloud/storage": "^6.12.0",
    "@trpc/server": "10.36",
    "@types/node": "^20.5.6",
    "@types/dotenv": "^8.2.0",
    "@types/jsonpath": "^0.2.0",
    "firebase": "^10.3.1",
    "firebase-admin": "^11.10.1",
    "firebase-tools": "^12.5.2",
    "cross-env": "^7.0.3",
    "lint-staged": "^11.1.2",
    "dotenv": "^16.0.3",
    "madge": "^5.0.2",
    "node-fetch": "^3.3.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "tsx": "^3.12.7",
    "typescript": "4.9.5",
    "vite": "^4.4.9",
    "vitest": "^0.34.2"
  }
}
