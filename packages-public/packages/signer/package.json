{
  "name": "@owlprotocol/signer",
  "version": "2.0.1",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/owlprotocol/signer.git"
  },
  "homepage": "https://owlprotocol.github.io/signer",
  "copyright": "Copyright 2023 Owl Protocol",
  "author": {
    "name": "Leo Vigna",
    "email": "leo.vigna@gmail.com",
    "url": "https://github.com/owlprotocol"
  },
  "license": "MIT",
  "type": "module",
  "main": "./lib/cjs/index.cjs",
  "module": "./lib/esm/index.mjs",
  "types": "./lib/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/types/index.d.ts",
      "require": "./lib/cjs/index.js",
      "import": "./lib/esm/index.js"
    }
  },
  "files": [
    "dist/*",
    "lib/*",
    "src/*",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": "^18.0.0"
  },
  "scripts": {
    "build": "npm-run-all -p tsc esbuild",
    "build:watch": "npm-run-all -p tsc:watch esbuild:watch",
    "test-integration": "firebase emulators:exec --only firestore,storage --project demo-owl-protocol 'pnpm run test:ci'",
    "test-integration:watch": "vitest",
    "test-integration:ci": "vitest --run",
    "esbuild": "node esbuild.config.mjs",
    "esbuild:watch": "ESBUILD_WATCH=true node esbuild.config.mjs",
    "tsc": "tsc",
    "tsc:watch": "tsc -w",
    "clean": "rimraf lib dist",
    "madge": "madge src/index.ts -c",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "lint:staged": "lint-staged",
    "firebase-emulator": "firebase emulators:start --only firestore,storage,auth --project demo-owl-protocol",
    "firebase:exec": "firebase emulators:exec --only firestore,storage,auth --project demo-owl-protocol"
  },
  "dependencies": {
    "@ethersproject/abstract-provider": "5.7.0",
    "@ethersproject/abstract-signer": "5.7.0",
    "@ethersproject/address": "5.7.0",
    "@ethersproject/bignumber": "5.7.0",
    "@ethersproject/bytes": "5.7.0",
    "@ethersproject/logger": "5.7.0",
    "@ethersproject/properties": "5.7.0",
    "@owlprotocol/contracts": "workspace:*",
    "@owlprotocol/contracts-api": "workspace:*",
    "@owlprotocol/contracts-api-client-trpc": "workspace:*",
    "@owlprotocol/contracts-api-firebase": "workspace:*",
    "@owlprotocol/contracts-proxy": "workspace:*",
    "@owlprotocol/envvars": "workspace:*",
    "@owlprotocol/utils": "workspace:*",
    "@owlprotocol/utils-ethers": "workspace:*",
    "ethers": "5.7.2"
  },
  "devDependencies": {
    "@ethersproject/networks": "5.7.0",
    "@owlprotocol/esbuild-config": "workspace:*",
    "@owlprotocol/eslint-config": "workspace:*",
    "@owlprotocol/prettier-config": "workspace:*",
    "@owlprotocol/tsconfig": "workspace:*",
    "@types/dotenv": "^8.2.0",
    "@types/node": "^20.5.6",
    "lint-staged": "^11.1.2",
    "madge": "^5.0.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "standalone": "link:@trpc/server/adapters/standalone",
    "tsx": "^3.12.7",
    "typescript": "4.9.5",
    "vite": "^4.4.9",
    "vitest": "^0.34.2"
  }
}
