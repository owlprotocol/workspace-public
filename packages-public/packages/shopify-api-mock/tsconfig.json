{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "moduleResolution": "Node16",
    "sourceMap": false,
    "outDir": "lib/types",
    "strict": true,
    "lib": ["esnext", "dom"],
    "esModuleInterop": false,
    "resolveJsonModule": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "isolatedModules": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": []
}
